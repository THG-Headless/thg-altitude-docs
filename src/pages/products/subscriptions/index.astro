---
import PageLayout from '../../../layouts/PageLayout.astro';
import ContentSection from '../../../components/ContentSection.astro';

const product = {
  id: "subscriptions",
  name: "Subscriptions",
  description: "Recurring revenue management solution",
  icon: "/icons/checkout.svg",
  quickLinks: [
    {
      title: "Overview",
      href: "/products/subscriptions"
    },
    {
      title: "Documentation",
      href: "/docs/subscriptions"
    },
    {
      title: "API Reference",
      href: "/docs/subscriptions/api"
    }
  ]
};

const features = [
  {
    title: "Subscription Plans",
    description: "Create and manage multiple subscription tiers",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/></svg>`
  },
  {
    title: "Payment Retry Logic",
    description: "Automatically retry failed payments to reduce churn",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg>`
  },
  {
    title: "Upgrade/Downgrade Paths",
    description: "Allow customers to change plans seamlessly",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"/></svg>`
  },
  {
    title: "Subscription Analytics",
    description: "Track MRR, churn, LTV, and other key metrics",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/></svg>`
  }
];

const highlights = [
  {
    title: "Flexible Billing",
    description: "Daily, weekly, monthly, or custom cycles"
  },
  {
    title: "Customer Portal",
    description: "Self-service subscription management"
  },
  {
    title: "Dunning Management",
    description: "Reduce churn from failed payments"
  },
  {
    title: "Analytics Dashboard",
    description: "Track key subscription metrics"
  }
];

const businessValues = [
  {
    title: "Predictable Revenue",
    description: "Build a stable, recurring revenue stream"
  },
  {
    title: "Increased Customer Lifetime Value",
    description: "Longer customer relationships through subscriptions"
  }
];

const metrics = [
  {
    title: "Monthly Recurring Revenue (MRR)",
    description: "Track your predictable monthly revenue"
  },
  {
    title: "Customer Churn Rate",
    description: "Monitor subscription cancellations"
  },
  {
    title: "Customer Lifetime Value (LTV)",
    description: "Understand the long-term value of subscribers"
  },
  {
    title: "Average Revenue Per User (ARPU)",
    description: "Measure revenue generated per subscriber"
  }
];
---

<PageLayout
  title="Subscriptions"
  description="Recurring revenue management solution"
  {product}
>
  <div class="prose dark:prose-invert max-w-none">
    <!-- Hero -->
    <div class="not-prose bg-gradient-to-b from-stone-900 to-stone-800 -mx-4 sm:-mx-6 lg:-mx-8 p-8 sm:p-12 lg:p-16 rounded-xl mb-12">
      <div class="max-w-3xl mx-auto text-center mb-12">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-6">THG Commerce Subscriptions</h1>
        <p class="text-xl text-stone-300">Build predictable recurring revenue with our comprehensive subscription management system. Handle billing cycles, customer management, analytics, and more with our powerful platform.</p>
      </div>
      <div class="flex justify-center gap-4 mt-8">
        <a href="/docs/subscriptions" class="inline-flex items-center gap-2 px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white rounded-lg transition-colors">
          Get Started
          <svg class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
        <a href="/docs/subscriptions/api" class="inline-flex items-center gap-2 px-6 py-3 border border-stone-600 hover:border-stone-500 text-stone-300 hover:text-white rounded-lg transition-colors">
          View API Reference
          <svg class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </div>

    <!-- Highlights -->
    <div class="not-prose grid sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
      {highlights.map(highlight => (
        <div class="bg-stone-900/50 rounded-xl p-6">
          <h3 class="text-lg font-semibold text-stone-200 mb-2">{highlight.title}</h3>
          <p class="text-stone-400">{highlight.description}</p>
        </div>
      ))}
    </div>

    <!-- Key Features -->
    <div class="grid sm:grid-cols-2 gap-8 mb-12">
      {features.map(feature => (
        <div class="not-prose bg-stone-900/50 rounded-xl p-6">
          <div class="text-primary-400 mb-4" set:html={feature.icon} />
          <h3 class="text-xl font-semibold text-stone-200 mb-2">{feature.title}</h3>
          <p class="text-stone-400">{feature.description}</p>
        </div>
      ))}
    </div>

    <!-- Subscription Analytics -->
    <ContentSection title="Subscription Analytics" description="Track and optimize your subscription business with key metrics:">
      <div class="grid sm:grid-cols-2 gap-6">
        {metrics.map(metric => (
          <div class="bg-stone-800/50 rounded-xl p-6">
            <h3 class="text-lg font-semibold text-stone-200 mb-2">{metric.title}</h3>
            <p class="text-stone-400">{metric.description}</p>
          </div>
        ))}
      </div>
    </ContentSection>

    <!-- Billing Options -->
    <ContentSection title="Flexible Billing Options" description="Configure subscription billing to match your business model:">
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="bg-stone-800/50 rounded-xl p-6">
          <h3 class="text-lg font-semibold text-stone-200 mb-2">Billing Frequencies</h3>
          <p class="text-stone-400">Daily, weekly, monthly, quarterly, or annual billing cycles</p>
        </div>
        <div class="bg-stone-800/50 rounded-xl p-6">
          <h3 class="text-lg font-semibold text-stone-200 mb-2">Trial Periods</h3>
          <p class="text-stone-400">Offer free or paid trials with automatic conversion</p>
        </div>
        <div class="bg-stone-800/50 rounded-xl p-6">
          <h3 class="text-lg font-semibold text-stone-200 mb-2">Usage-Based Billing</h3>
          <p class="text-stone-400">Charge based on consumption or usage metrics</p>
        </div>
        <div class="bg-stone-800/50 rounded-xl p-6">
          <h3 class="text-lg font-semibold text-stone-200 mb-2">Tiered Pricing</h3>
          <p class="text-stone-400">Create subscription tiers with different features and pricing</p>
        </div>
        <div class="bg-stone-800/50 rounded-xl p-6">
          <h3 class="text-lg font-semibold text-stone-200 mb-2">Prorated Billing</h3>
          <p class="text-stone-400">Automatically adjust charges for plan changes mid-cycle</p>
        </div>
        <div class="bg-stone-800/50 rounded-xl p-6">
          <h3 class="text-lg font-semibold text-stone-200 mb-2">Multiple Payment Methods</h3>
          <p class="text-stone-400">Support for credit cards, direct debit, and digital wallets</p>
        </div>
      </div>
    </ContentSection>

    <!-- Business Value -->
    <ContentSection title="Business Value" description="Build a sustainable business with recurring revenue:">
      <div class="grid sm:grid-cols-2 gap-6">
        {businessValues.map(value => (
          <div class="bg-stone-800/50 rounded-xl p-6">
            <h3 class="text-lg font-semibold text-stone-200 mb-2">{value.title}</h3>
            <p class="text-stone-400">{value.description}</p>
          </div>
        ))}
      </div>
    </ContentSection>

    <!-- Resources -->
    <ContentSection title="Resources">
      <div class="grid sm:grid-cols-3 gap-6">
        <a href="/docs/subscriptions" class="block bg-stone-800/50 rounded-xl p-6 hover:bg-stone-800/70 transition-colors">
          <h3 class="text-lg font-semibold text-stone-200 mb-2">Documentation</h3>
          <p class="text-stone-400">Learn how to implement subscription commerce</p>
        </a>
        <a href="/docs/subscriptions/quickstart" class="block bg-stone-800/50 rounded-xl p-6 hover:bg-stone-800/70 transition-colors">
          <h3 class="text-lg font-semibold text-stone-200 mb-2">Quick Start</h3>
          <p class="text-stone-400">Set up your first subscription product</p>
        </a>
        <a href="/docs/subscriptions/api" class="block bg-stone-800/50 rounded-xl p-6 hover:bg-stone-800/70 transition-colors">
          <h3 class="text-lg font-semibold text-stone-200 mb-2">API Reference</h3>
          <p class="text-stone-400">Explore the Subscriptions API</p>
        </a>
      </div>
    </ContentSection>

    <!-- Getting Started -->
    <div class="not-prose bg-stone-900/50 rounded-xl p-8 text-center mt-12">
      <h2 class="text-2xl font-bold text-stone-200 mb-4">Ready to build recurring revenue?</h2>
      <p class="text-stone-400 mb-6">Get started with THG Commerce Subscriptions today.</p>
      <div class="flex justify-center gap-4">
        <a href="/docs/subscriptions" class="inline-flex items-center gap-2 px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white rounded-lg transition-colors">
          Get Started
          <svg class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</PageLayout>