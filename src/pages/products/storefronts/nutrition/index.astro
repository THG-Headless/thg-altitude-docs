---
import PageLayout from '../../../../layouts/PageLayout.astro';
import HeroImage from '../../../../components/HeroImage.astro';
import ContentSection from '../../../../components/ContentSection.astro';

const product = {
  id: "storefronts",
  name: "Storefronts",
  description: "Build and deploy high-performance commerce experiences",
  icon: "/icons/storefronts.svg",
  quickLinks: [
    {
      title: "Overview",
      href: "/products/storefronts"
    },
    {
      title: "Nutrition",
      href: "/products/storefronts/nutrition"
    },
    {
      title: "Luxury",
      href: "/products/storefronts/luxury"
    }
  ]
};

const features = [
  {
    title: "Supersize",
    description: "Enable customers to buy in bulk with automatic quantity discounts",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v12m-6-6h12"/></svg>`
  },
  {
    title: "Subscriptions",
    description: "Built-in subscription management for repeat purchases",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg>`
  },
  {
    title: "VIP Pricing",
    description: "Flexible pricing tiers for loyalty programs and bulk buyers",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/></svg>`
  },
  {
    title: "Quick Buy",
    description: "Streamlined purchasing process optimized for repeat customers",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/></svg>`
  }
];
---

<PageLayout
  title="Nutrition Storefront"
  description="A white-label storefront optimized for nutrition and supplement brands"
  {product}
>
  <div class="prose dark:prose-invert max-w-none">
    <!-- Hero -->
    <div class="not-prose bg-gradient-to-b from-stone-900 to-stone-800 -mx-4 sm:-mx-6 lg:-mx-8 p-8 sm:p-12 lg:p-16 rounded-xl mb-12">
      <div class="max-w-3xl mx-auto text-center mb-12">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-6">Nutrition Storefront</h1>
        <p class="text-xl text-stone-300">A specialized white-label solution built on Altitude, designed specifically for nutrition and supplement brands.</p>
      </div>
      <div class="max-w-5xl mx-auto">
        <HeroImage 
          src="/images/nutrition-storefront.png"
          alt="Nutrition storefront example showing supplement products and bulk buying options"
        />
      </div>
    </div>

    <!-- Key Features -->
    <div class="grid sm:grid-cols-2 gap-8 mb-12">
      {features.map(feature => (
        <div class="not-prose bg-stone-900/50 rounded-xl p-6">
          <div class="text-primary-400 mb-4" set:html={feature.icon} />
          <h3 class="text-xl font-semibold text-stone-200 mb-2">{feature.title}</h3>
          <p class="text-stone-400">{feature.description}</p>
        </div>
      ))}
    </div>

    <ContentSection title="Platform Capabilities" description="The Nutrition Storefront includes a robust set of features designed to create engaging shopping experiences:">
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <div>
          <h3 class="text-lg font-semibold text-stone-200 mb-4">Core Commerce</h3>
          <ul class="space-y-2 text-stone-400">
            <li>Advanced product search and filtering</li>
            <li>Integrated reviews and ratings</li>
            <li>Comprehensive wishlist functionality</li>
            <li>Built-in loyalty program support</li>
            <li>Buy Now Pay Later integration</li>
            <li>Product recommendations</li>
          </ul>
        </div>

        <div>
          <h3 class="text-lg font-semibold text-stone-200 mb-4">Internationalization</h3>
          <ul class="space-y-2 text-stone-400">
            <li>Multi-property support for global brands</li>
            <li>Subsite capabilities for market-specific content</li>
            <li>International domain support (GTLD)</li>
          </ul>
        </div>

        <div>
          <h3 class="text-lg font-semibold text-stone-200 mb-4">Marketing & Analytics</h3>
          <ul class="space-y-2 text-stone-400">
            <li>A/B testing capabilities</li>
            <li>Campaign segmentation</li>
            <li>Email marketing integration</li>
            <li>Advanced analytics and tracking</li>
          </ul>
        </div>
      </div>
    </ContentSection>

    <ContentSection title="Integration & Security">
      <ul class="space-y-2 text-stone-400">
        <li>ReCaptcha integration for enhanced security</li>
        <li>Content Square analytics integration</li>
        <li>OneTrust consent management</li>
        <li>WordPress integration through Tesseract</li>
        <li>LivePerson support integration</li>
      </ul>
    </ContentSection>

    <ContentSection title="Getting Started">
      <p class="text-stone-400 mb-6">To learn more about implementing the Nutrition Storefront, check out our:</p>
      <div class="flex gap-4">
        <a href="/docs/storefronts/quickstart" class="inline-flex items-center gap-2 px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white rounded-lg transition-colors">
          Quick Start Guide
          <svg class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
        <a href="/docs/storefronts/integration" class="inline-flex items-center gap-2 px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white rounded-lg transition-colors">
          Integration Guide
          <svg class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </ContentSection>
  </div>
</PageLayout>