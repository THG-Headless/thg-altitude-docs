---
import PageLayout from '../../../../layouts/PageLayout.astro';
import HeroImage from '../../../../components/HeroImage.astro';
import ContentSection from '../../../../components/ContentSection.astro';

const product = {
  id: "storefronts",
  name: "Storefronts",
  description: "Build and deploy high-performance commerce experiences",
  icon: "/icons/storefronts.svg",
  quickLinks: [
    {
      title: "Overview",
      href: "/products/storefronts"
    },
    {
      title: "Nutrition",
      href: "/products/storefronts/nutrition"
    },
    {
      title: "Luxury",
      href: "/products/storefronts/luxury"
    }
  ]
};

const features = [
  {
    title: "Premium UX",
    description: "Designed for high-end retail experiences with sophisticated interactions",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/></svg>`
  },
  {
    title: "VIP Pricing",
    description: "Exclusive pricing tiers for premium customers",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/></svg>`
  },
  {
    title: "Sponsored Ads",
    description: "Integrated Criteo support for premium product placement",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z"/></svg>`
  },
  {
    title: "Provenance",
    description: "Built-in support for product authenticity and origin tracking",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>`
  }
];
---

<PageLayout
  title="Luxury Storefront"
  description="A white-label storefront designed for luxury and premium retail brands"
  {product}
>
  <div class="prose dark:prose-invert max-w-none">
    <!-- Hero -->
    <div class="not-prose bg-gradient-to-b from-stone-900 to-stone-800 -mx-4 sm:-mx-6 lg:-mx-8 p-8 sm:p-12 lg:p-16 rounded-xl mb-12">
      <div class="max-w-3xl mx-auto text-center mb-12">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-6">Luxury Storefront</h1>
        <p class="text-xl text-stone-300">A sophisticated white-label solution crafted specifically for luxury and premium retail brands.</p>
      </div>
      <div class="max-w-5xl mx-auto">
        <HeroImage 
          src="/images/luxury-storefront.png"
          alt="Luxury storefront example showing a premium shopping experience"
        />
      </div>
    </div>

    <!-- Key Features -->
    <div class="grid sm:grid-cols-2 gap-8 mb-12">
      {features.map(feature => (
        <div class="not-prose bg-stone-900/50 rounded-xl p-6">
          <div class="text-primary-400 mb-4" set:html={feature.icon} />
          <h3 class="text-xl font-semibold text-stone-200 mb-2">{feature.title}</h3>
          <p class="text-stone-400">{feature.description}</p>
        </div>
      ))}
    </div>

    <ContentSection title="Platform Capabilities" description="The Luxury Storefront includes a comprehensive set of features designed for premium retail:">
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <div>
          <h3 class="text-lg font-semibold text-stone-200 mb-4">Core Commerce</h3>
          <ul class="space-y-2 text-stone-400">
            <li>Sophisticated product discovery</li>
            <li>Integrated reviews and ratings</li>
            <li>Premium wishlist functionality</li>
            <li>Advanced loyalty program support</li>
            <li>Buy Now Pay Later integration</li>
            <li>Personalized recommendations</li>
          </ul>
        </div>

        <div>
          <h3 class="text-lg font-semibold text-stone-200 mb-4">Internationalization</h3>
          <ul class="space-y-2 text-stone-400">
            <li>Multi-property support for global luxury brands</li>
            <li>Subsite capabilities for market-specific experiences</li>
            <li>International domain support (GTLD)</li>
          </ul>
        </div>

        <div>
          <h3 class="text-lg font-semibold text-stone-200 mb-4">Marketing & Analytics</h3>
          <ul class="space-y-2 text-stone-400">
            <li>Advanced A/B testing</li>
            <li>Sophisticated campaign segmentation</li>
            <li>Premium email marketing integration</li>
            <li>SMS marketing capabilities (Work in Progress)</li>
            <li>Comprehensive analytics suite</li>
          </ul>
        </div>
      </div>
    </ContentSection>

    <ContentSection title="Integration & Security">
      <ul class="space-y-2 text-stone-400">
        <li>ReCaptcha integration for enhanced security</li>
        <li>Content Square analytics integration</li>
        <li>OneTrust consent management</li>
        <li>WordPress integration through Tesseract</li>
        <li>LivePerson support integration</li>
        <li>Dynamic Yield personalization (Work in Progress)</li>
      </ul>
    </ContentSection>

    <ContentSection title="Getting Started">
      <p class="text-stone-400 mb-6">To learn more about implementing the Luxury Storefront, explore our:</p>
      <div class="flex gap-4">
        <a href="/docs/storefronts/quickstart" class="inline-flex items-center gap-2 px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white rounded-lg transition-colors">
          Quick Start Guide
          <svg class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
        <a href="/docs/storefronts/integration" class="inline-flex items-center gap-2 px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white rounded-lg transition-colors">
          Integration Guide
          <svg class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </ContentSection>
  </div>
</PageLayout>