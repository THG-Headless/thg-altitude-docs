---
import PageLayout from '../../../layouts/PageLayout.astro';
import ContentSection from '../../../components/ContentSection.astro';

const product = {
  id: "discounts",
  name: "Discounts",
  description: "Flexible promotion management system",
  icon: "/icons/payments.svg",
  quickLinks: [
    {
      title: "Overview",
      href: "/products/discounts"
    },
    {
      title: "Documentation",
      href: "/docs/discounts"
    },
    {
      title: "API Reference",
      href: "/docs/discounts/api"
    }
  ]
};

const features = [
  {
    title: "Coupon Management",
    description: "Generate and track unique coupon codes",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"/></svg>`
  },
  {
    title: "Bundle Discounts",
    description: "Create compelling product bundles with special pricing",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/></svg>`
  },
  {
    title: "Loyalty Programs",
    description: "Reward repeat customers with points and tiers",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/></svg>`
  },
  {
    title: "Cart Rules",
    description: "Apply discounts based on cart contents or value",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/></svg>`
  }
];

const highlights = [
  {
    title: "Flexible Rules",
    description: "Create any type of promotion"
  },
  {
    title: "Targeted Campaigns",
    description: "Segment customers for personalized offers"
  },
  {
    title: "Scheduled Promotions",
    description: "Set start and end dates automatically"
  },
  {
    title: "Performance Tracking",
    description: "Measure the impact of your promotions"
  }
];

const businessValues = [
  {
    title: "Increase Average Order Value",
    description: "Encourage larger purchases with tiered discounts"
  },
  {
    title: "Boost Customer Retention",
    description: "Keep customers coming back with loyalty rewards"
  }
];

const discountTypes = [
  {
    title: "Percentage Off",
    description: "Discount a percentage of the product or cart value"
  },
  {
    title: "Fixed Amount",
    description: "Apply a specific currency amount discount"
  },
  {
    title: "Buy X Get Y",
    description: "Offer free or discounted items with qualifying purchases"
  },
  {
    title: "Volume Discounts",
    description: "Provide better pricing for larger quantities"
  },
  {
    title: "Free Shipping",
    description: "Waive shipping costs based on order criteria"
  },
  {
    title: "Gift With Purchase",
    description: "Add free items to orders that meet specific conditions"
  }
];
---

<PageLayout
  title="Discounts"
  description="Flexible promotion management system"
  {product}
>
  <div class="prose dark:prose-invert max-w-none">
    <!-- Hero -->
    <div class="not-prose bg-gradient-to-b from-stone-900 to-stone-800 -mx-4 sm:-mx-6 lg:-mx-8 p-8 sm:p-12 lg:p-16 rounded-xl mb-12">
      <div class="max-w-3xl mx-auto text-center mb-12">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-6">THG Commerce Discounts</h1>
        <p class="text-xl text-stone-300">Create and manage sophisticated promotional campaigns with our flexible discount engine. From simple percentage discounts to complex multi-tier promotions, our system handles it all.</p>
      </div>
      <div class="flex justify-center gap-4 mt-8">
        <a href="/docs/discounts" class="inline-flex items-center gap-2 px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white rounded-lg transition-colors">
          Get Started
          <svg class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
        <a href="/docs/discounts/api" class="inline-flex items-center gap-2 px-6 py-3 border border-stone-600 hover:border-stone-500 text-stone-300 hover:text-white rounded-lg transition-colors">
          View API Reference
          <svg class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </div>

    <!-- Highlights -->
    <div class="not-prose grid sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
      {highlights.map(highlight => (
        <div class="bg-stone-900/50 rounded-xl p-6">
          <h3 class="text-lg font-semibold text-stone-200 mb-2">{highlight.title}</h3>
          <p class="text-stone-400">{highlight.description}</p>
        </div>
      ))}
    </div>

    <!-- Key Features -->
    <div class="grid sm:grid-cols-2 gap-8 mb-12">
      {features.map(feature => (
        <div class="not-prose bg-stone-900/50 rounded-xl p-6">
          <div class="text-primary-400 mb-4" set:html={feature.icon} />
          <h3 class="text-xl font-semibold text-stone-200 mb-2">{feature.title}</h3>
          <p class="text-stone-400">{feature.description}</p>
        </div>
      ))}
    </div>

    <!-- Discount Types -->
    <ContentSection title="Discount Types" description="Our flexible system supports a wide range of promotion types:">
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {discountTypes.map(type => (
          <div class="bg-stone-800/50 rounded-xl p-6">
            <h3 class="text-lg font-semibold text-stone-200 mb-2">{type.title}</h3>
            <p class="text-stone-400">{type.description}</p>
          </div>
        ))}
      </div>
    </ContentSection>

    <!-- Business Value -->
    <ContentSection title="Business Value" description="Drive sales and build customer loyalty:">
      <div class="grid sm:grid-cols-2 gap-6">
        {businessValues.map(value => (
          <div class="bg-stone-800/50 rounded-xl p-6">
            <h3 class="text-lg font-semibold text-stone-200 mb-2">{value.title}</h3>
            <p class="text-stone-400">{value.description}</p>
          </div>
        ))}
      </div>
    </ContentSection>

    <!-- Resources -->
    <ContentSection title="Resources">
      <div class="grid sm:grid-cols-3 gap-6">
        <a href="/docs/discounts" class="block bg-stone-800/50 rounded-xl p-6 hover:bg-stone-800/70 transition-colors">
          <h3 class="text-lg font-semibold text-stone-200 mb-2">Documentation</h3>
          <p class="text-stone-400">Learn how to create effective promotions</p>
        </a>
        <a href="/docs/discounts/quickstart" class="block bg-stone-800/50 rounded-xl p-6 hover:bg-stone-800/70 transition-colors">
          <h3 class="text-lg font-semibold text-stone-200 mb-2">Quick Start</h3>
          <p class="text-stone-400">Set up your first discount in minutes</p>
        </a>
        <a href="/docs/discounts/api" class="block bg-stone-800/50 rounded-xl p-6 hover:bg-stone-800/70 transition-colors">
          <h3 class="text-lg font-semibold text-stone-200 mb-2">API Reference</h3>
          <p class="text-stone-400">Explore the Discounts API</p>
        </a>
      </div>
    </ContentSection>

    <!-- Getting Started -->
    <div class="not-prose bg-stone-900/50 rounded-xl p-8 text-center mt-12">
      <h2 class="text-2xl font-bold text-stone-200 mb-4">Ready to boost your sales with promotions?</h2>
      <p class="text-stone-400 mb-6">Get started with THG Commerce Discounts today.</p>
      <div class="flex justify-center gap-4">
        <a href="/docs/discounts" class="inline-flex items-center gap-2 px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white rounded-lg transition-colors">
          Get Started
          <svg class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</PageLayout>