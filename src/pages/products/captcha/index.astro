---
import PageLayout from '../../../layouts/PageLayout.astro';
import ProductHero from '../../../components/ProductHero.astro';

const features = [
  {
    title: "Framework Agnostic",
    description: "Works with any JavaScript framework or vanilla HTML/CSS/JS",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z"/></svg>`
  },
  {
    title: "Easy Installation",
    description: "Simple npm installation process with minimal configuration required",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/></svg>`
  },
  {
    title: "Multi-Provider Support",
    description: "A unified TypeScript interface for three major CAPTCHA providers with seamless switching",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/></svg>`
  },
  {
    title: "Multi-Instance Ready",
    description: "Supports multiple CAPTCHA widgets on the same page with independent state management",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h4a1 1 0 011 1v4a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM14 5a1 1 0 011-1h4a1 1 0 011 1v4a1 1 0 01-1 1h-4a1 1 0 01-1-1V5zM4 15a1 1 0 011-1h4a1 1 0 011 1v4a1 1 0 01-1 1H5a1 1 0 01-1-1v-4zM14 15a1 1 0 011-1h4a1 1 0 011 1v4a1 1 0 01-1 1h-4a1 1 0 01-1-1v-4z"/></svg>`
  }
];

const resources = [
  {
    title: "Documentation",
    description: "Learn how to implement Captcha",
    href: "/docs/captcha",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/></svg>`
  },
  {
    title: "Integration Guide",
    description: "Add Captcha to your project",
    href: "/docs/captcha",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/></svg>`
  }
];
---

<PageLayout
  title="Captcha"
  description="Captcha abstractions for simplified integration."
>
  <ProductHero
    title="Captcha"
    description="A framework-agnostic TypeScript library unifies Google reCAPTCHA, hCaptcha, and Cloudflare Turnstile behind one clean implementation, letting you switch providers instantly without rewriting code. Deploy consistent bot protection across any JavaScript framework with automatic script loading and multiple widget support."
    icon="/statics/icons/altitude.svg"
    primaryAction={{
      text: "Get Started",
      href: "/docs/captcha"
    }}
  />

  <!-- Features -->
  <div class="container px-4 py-10 sm:px-6 lg:px-12 lg:py-24 mx-auto">
    <div class="grid sm:grid-cols-2 lg:grid-cols-4 items-start gap-12">
      {features.map(feature => (
        <div class="text-center">
          <div class="flex justify-center items-center w-12 h-12 rounded-xl mx-auto">
            <Fragment set:html={feature.icon} />
          </div>
          <div class="mt-3">
            <h3 class="text-base font-semibold text-stone-800 dark:text-stone-200">
              {feature.title}
            </h3>
            <p class="mt-1 text-stone-600 dark:text-stone-400">
              {feature.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>

  <!-- Resources -->
  <div class="container px-4 py-10 sm:px-6 lg:px-12 lg:py-24 mx-auto">
    <div class="max-w-2xl mx-auto text-center mb-10">
      <h2 class="text-xl font-bold md:text-3xl dark:text-white">Resources</h2>
      <p class="mt-3 text-stone-600 dark:text-stone-400">Everything you need to get started with Captcha.</p>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 items-center">
      {resources.map(resource => (
        <a class="group flex flex-col h-full border shadow-sm rounded-xl hover:shadow-md transition bg-black/50 border-stone-800 justify-center" href={resource.href}>
          <div class="p-4 md:p-5">
            <div class="flex items-center gap-4">
              <div class="flex justify-center items-center w-8 h-8 rounded-lg">
                <Fragment set:html={resource.icon} />
              </div>
              <div class="grow">
                <h3>
                  {resource.title}
                </h3>
                <p class="text-sm text-stone-600 dark:text-stone-400">
                  {resource.description}
                </p>
              </div>
              <div class="flex-shrink-0 text-stone-400">
                <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</PageLayout>