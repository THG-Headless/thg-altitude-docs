---
import PageLayout from '../../../layouts/PageLayout.astro';
import ProductHero from '../../../components/ProductHero.astro';

const features = [
  {
    title: "Data Management",
    description: "Centralized product information management with flexible attributes",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 7h16M4 12h16M4 17h16"/></svg>`
  },
  {
    title: "Digital Assets",
    description: "Integrated media management with automatic optimization",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 16l4-4 4 4 8-8"/><path d="M4 21h16a2 2 0 002-2V5a2 2 0 00-2-2H4a2 2 0 00-2 2v14a2 2 0 002 2z"/></svg>`
  },
  {
    title: "Workflows",
    description: "Customizable approval processes and team collaboration",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M17 3a2.85 2.83 0 114 4L7.5 20.5 2 22l1.5-5.5L17 3z"/></svg>`
  },
  {
    title: "Multi-Channel",
    description: "Publish to any channel with market-specific attributes",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M8 3H5a2 2 0 00-2 2v14c0 1.1.9 2 2 2h14a2 2 0 002-2V5a2 2 0 00-2-2h-3M12 3v18M3 12h18"/></svg>`
  }
];

const resources = [
  {
    title: "Documentation",
    description: "Learn how to use THG Commerce PIM",
    href: "/docs/pim",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/></svg>`
  },
  {
    title: "API Reference",
    description: "Explore the PIM API endpoints",
    href: "/docs/pim/api",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/></svg>`
  },
  {
    title: "Migration Guide",
    description: "Learn how to migrate your product data",
    href: "/docs/pim/migration",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M17 8l4 4-4 4M3 12h18M7 16l-4-4 4-4"/></svg>`
  }
];

const highlights = [
  {
    title: "Centralized",
    description: "Single source of truth for product data"
  },
  {
    title: "Flexible",
    description: "Customizable attributes and workflows"
  },
  {
    title: "Scalable",
    description: "Handles millions of products efficiently"
  },
  {
    title: "Connected",
    description: "Integrates with your commerce ecosystem"
  }
];
---

<PageLayout
  title="Content"
  description="Centralized product information management"
>
  <ProductHero
    title="Content"
    description="Manage and enrich your product information in one central location. Streamline your product data workflows and deliver consistent product experiences across all your channels."
    icon="/icons/pim.svg"
    primaryAction={{
      text: "Get Started",
      href: "/docs/pim"
    }}
    secondaryAction={{
      text: "View API Reference",
      href: "/docs/pim/api"
    }}
    highlights={highlights}
  />

  <!-- Features -->
  <div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
    <div class="grid sm:grid-cols-2 lg:grid-cols-4 items-center gap-12">
      {features.map(feature => (
        <div class="text-center">
          <div class="flex justify-center items-center w-12 h-12 bg-primary-500/10 rounded-xl mx-auto text-primary-600 dark:text-primary-400">
            <Fragment set:html={feature.icon} />
          </div>
          <div class="mt-3">
            <h3 class="text-lg font-semibold text-stone-800 dark:text-stone-200">
              {feature.title}
            </h3>
            <p class="mt-1 text-stone-600 dark:text-stone-400">
              {feature.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>

  <!-- Resources -->
  <div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
    <div class="max-w-2xl mx-auto text-center mb-10">
      <h2 class="text-2xl font-bold md:text-3xl dark:text-white">Resources</h2>
      <p class="mt-3 text-stone-600 dark:text-stone-400">Everything you need to manage your product information.</p>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {resources.map(resource => (
        <a class="group flex flex-col h-full bg-white border shadow-sm rounded-xl hover:shadow-md transition dark:bg-stone-900 dark:border-stone-800" href={resource.href}>
          <div class="p-4 md:p-5">
            <div class="flex items-center gap-4">
              <div class="flex justify-center items-center w-8 h-8 bg-primary-500/10 rounded-lg text-primary-600 dark:text-primary-400">
                <Fragment set:html={resource.icon} />
              </div>
              <div class="grow">
                <h3 class="group-hover:text-primary-600 font-semibold text-stone-800 dark:group-hover:text-primary-500 dark:text-stone-200">
                  {resource.title}
                </h3>
                <p class="text-sm text-stone-600 dark:text-stone-400">
                  {resource.description}
                </p>
              </div>
              <div class="flex-shrink-0 text-stone-400 group-hover:text-primary-600 dark:group-hover:text-primary-500">
                <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</PageLayout>