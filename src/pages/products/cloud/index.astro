---
import PageLayout from '../../../layouts/PageLayout.astro';
import ProductHero from '../../../components/ProductHero.astro';

const features = [
  {
    title: "Blazing Fast Performance",
    description: "V8 Isolate Edge SSR for lightning-fast performance regardless of traffic volume",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>`
  },
  {
    title: "Global Edge Network",
    description: "Sub-100ms Time to First Byte (TTFB) from anywhere in the world",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>`
  },
  {
    title: "Seamless Deployment",
    description: "Deploy your front-end globally in just 3 minutes with GitHub integration",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V8a2 2 0 00-2-2h-5m-4 0V5a2 2 0 114 0v1m-4 0a2 2 0 104 0m-5 8a2 2 0 100-4 2 2 0 000 4zm0 0c1.306 0 2.417.835 2.83 2M9 14a3.001 3.001 0 00-2.83 2M15 11h3m-3 4h2"/></svg>`
  },
  {
    title: "Customizable & Flexible",
    description: "Build the perfect commerce website for your business with extensive customization",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z"/></svg>`
  }
];

const resources = [
  {
    title: "Documentation",
    description: "Learn how to deploy with Cloud",
    href: "/docs/cloud",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/></svg>`
  },
  {
    title: "Quick Start",
    description: "Deploy your first site in minutes",
    href: "/docs/cloud/quickstart",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>`
  },
  {
    title: "API Reference",
    description: "Explore the Cloud API documentation",
    href: "/docs/cloud/api",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/></svg>`
  }
];

const highlights = [
  {
    title: "Lightning Fast",
    description: "Sub-100ms TTFB from anywhere in the world"
  },
  {
    title: "Global Scale",
    description: "200+ edge locations worldwide"
  },
  {
    title: "Enterprise Ready",
    description: "99.99% uptime with robust security"
  },
  {
    title: "Developer First",
    description: "Deploy in minutes with GitHub integration"
  }
];
---

<PageLayout
  title="Cloud"
  description="Edge-first delivery of headless front-ends"
>
  <ProductHero
    title="Altitude Platform"
    description="Deploy your headless front-end to the edge in minutes. Our global edge network delivers lightning-fast performance, seamless deployments, and enterprise-grade reliability."
    icon="/icons/altitude-alt.svg"
    primaryAction={{
      text: "Get Started",
      href: "/docs/cloud"
    }}
    secondaryAction={{
      text: "View API Reference",
      href: "/docs/cloud/api"
    }}
    highlights={highlights}
  />

  <!-- Features -->
  <div class="container px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
    <div class="grid sm:grid-cols-2 lg:grid-cols-4 items-center gap-12">
      {features.map(feature => (
        <div class="text-center">
          <div class="flex justify-center items-center w-12 h-12 bg-primary-500/10 rounded-xl mx-auto text-primary-600 dark:text-primary-400">
            <Fragment set:html={feature.icon} />
          </div>
          <div class="mt-3">
            <h3 class="text-lg font-semibold text-stone-800 dark:text-stone-200">
              {feature.title}
            </h3>
            <p class="mt-1 text-stone-600 dark:text-stone-400">
              {feature.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>

  <!-- Business Value -->
  <div class="container px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
    <div class="max-w-2xl mx-auto text-center mb-10">
      <h2 class="text-2xl font-bold md:text-3xl dark:text-white">Edge-First Performance</h2>
      <p class="mt-3 text-stone-600 dark:text-stone-400">Deliver exceptional customer experiences with global edge computing.</p>
    </div>

    <div class="grid md:grid-cols-2 gap-8 lg:gap-12">
      <div class="flex flex-col h-full bg-white border shadow-sm rounded-xl dark:bg-stone-900 dark:border-stone-800">
        <div class="p-4 md:p-6">
          <h3 class="text-xl font-semibold text-stone-800 dark:text-stone-200">Global Edge Network</h3>
          <p class="mt-3 text-stone-600 dark:text-stone-400">
            Deploy your front-end to over 200 edge locations worldwide, ensuring lightning-fast performance for customers everywhere.
          </p>
        </div>
      </div>

      <div class="flex flex-col h-full bg-white border shadow-sm rounded-xl dark:bg-stone-900 dark:border-stone-800">
        <div class="p-4 md:p-6">
          <h3 class="text-xl font-semibold text-stone-800 dark:text-stone-200">Enterprise Reliability</h3>
          <p class="mt-3 text-stone-600 dark:text-stone-400">
            Built for high-traffic commerce sites with 99.99% uptime, robust security, and enterprise-grade support.
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Resources -->
  <div class="container px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
    <div class="max-w-2xl mx-auto text-center mb-10">
      <h2 class="text-2xl font-bold md:text-3xl dark:text-white">Resources</h2>
      <p class="mt-3 text-stone-600 dark:text-stone-400">Everything you need to deploy with THG Commerce Cloud.</p>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {resources.map(resource => (
        <a class="group flex flex-col h-full bg-white border shadow-sm rounded-xl hover:shadow-md transition dark:bg-stone-900 dark:border-stone-800" href={resource.href}>
          <div class="p-4 md:p-5">
            <div class="flex items-center gap-4">
              <div class="flex justify-center items-center w-8 h-8 bg-primary-500/10 rounded-lg text-primary-600 dark:text-primary-400">
                <Fragment set:html={resource.icon} />
              </div>
              <div class="grow">
                <h3 class="group-hover:text-primary-600 font-semibold text-stone-800 dark:group-hover:text-primary-500 dark:text-stone-200">
                  {resource.title}
                </h3>
                <p class="text-sm text-stone-600 dark:text-stone-400">
                  {resource.description}
                </p>
              </div>
              <div class="flex-shrink-0 text-stone-400 group-hover:text-primary-600 dark:group-hover:text-primary-500">
                <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</PageLayout>