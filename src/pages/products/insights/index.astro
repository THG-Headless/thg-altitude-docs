---
import PageLayout from '../../../layouts/PageLayout.astro';
import ProductHero from '../../../components/ProductHero.astro';

const features = [
  {
    title: "Customer Journey Analytics",
    description: "Understand how customers interact with your brand across all touchpoints",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 12h4l3-9 4 18 3-9h4"/></svg>`
  },
  {
    title: "Real-time Decision Making",
    description: "Make data-driven decisions with instant access to customer behavior insights",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 8v4l3 3"/><circle cx="12" cy="12" r="10"/></svg>`
  },
  {
    title: "Conversion Optimization",
    description: "Identify and remove friction points in your customer journey",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>`
  },
  {
    title: "Personalization",
    description: "Deliver tailored experiences based on customer behavior and preferences",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>`
  }
];

const resources = [
  {
    title: "Documentation",
    description: "Learn how to implement Insights in your business",
    href: "/docs/insights",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/></svg>`
  },
  {
    title: "Case Studies",
    description: "See how other businesses drive growth with Insights",
    href: "/resources/case-studies",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5.586a1 1 0 0 1 .707.293l5.414 5.414a1 1 0 0 1 .293.707V19a2 2 0 0 1-2 2z"/></svg>`
  },
  {
    title: "Best Practices",
    description: "Optimize your analytics strategy with proven methods",
    href: "/resources/best-practices",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>`
  }
];

const highlights = [
  {
    title: "Data-Driven",
    description: "Make informed decisions based on real customer behavior"
  },
  {
    title: "Cross-Platform",
    description: "Track customer journeys across web and mobile"
  },
  {
    title: "Enterprise-Ready",
    description: "Built for scale with robust security and compliance"
  },
  {
    title: "Actionable",
    description: "Turn insights into immediate business improvements"
  }
];
---

<PageLayout
  title="Insights"
  description="Transform customer data into business growth"
>
  <ProductHero
    title="THG Commerce Insights"
    description="Understand your customers better than ever before. Our powerful analytics platform helps you track customer behavior, optimize experiences, and drive business growth through data-driven decisions."
    icon="/icons/insights.svg"
    primaryAction={{
      text: "Get Started",
      href: "/docs/insights"
    }}
    secondaryAction={{
      text: "View Case Studies",
      href: "/resources/case-studies"
    }}
    highlights={highlights}
  />

  <!-- Features -->
  <div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
    <div class="grid sm:grid-cols-2 lg:grid-cols-4 items-center gap-12">
      {features.map(feature => (
        <div class="text-center">
          <div class="flex justify-center items-center w-12 h-12 bg-primary-500/10 rounded-xl mx-auto text-primary-600 dark:text-primary-400">
            <Fragment set:html={feature.icon} />
          </div>
          <div class="mt-3">
            <h3 class="text-lg font-semibold text-stone-800 dark:text-stone-200">
              {feature.title}
            </h3>
            <p class="mt-1 text-stone-600 dark:text-stone-400">
              {feature.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>

  <!-- Business Value -->
  <div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
    <div class="max-w-2xl mx-auto text-center mb-10">
      <h2 class="text-2xl font-bold md:text-3xl dark:text-white">Drive Business Growth</h2>
      <p class="mt-3 text-stone-600 dark:text-stone-400">Transform data into actionable insights that power your business decisions.</p>
    </div>

    <div class="grid md:grid-cols-2 gap-8 lg:gap-12">
      <div class="flex flex-col h-full bg-white border shadow-sm rounded-xl dark:bg-stone-900 dark:border-stone-800">
        <div class="p-4 md:p-6">
          <h3 class="text-xl font-semibold text-stone-800 dark:text-stone-200">Increase Conversion Rates</h3>
          <p class="mt-3 text-stone-600 dark:text-stone-400">
            Identify where customers drop off in their journey and optimize your funnel for maximum conversion. Our analytics help you understand what works and what doesn't.
          </p>
        </div>
      </div>

      <div class="flex flex-col h-full bg-white border shadow-sm rounded-xl dark:bg-stone-900 dark:border-stone-800">
        <div class="p-4 md:p-6">
          <h3 class="text-xl font-semibold text-stone-800 dark:text-stone-200">Enhance Customer Experience</h3>
          <p class="mt-3 text-stone-600 dark:text-stone-400">
            Deliver personalized experiences that keep customers coming back. Use real-time insights to make informed decisions about your customer experience strategy.
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Resources -->
  <div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
    <div class="max-w-2xl mx-auto text-center mb-10">
      <h2 class="text-2xl font-bold md:text-3xl dark:text-white">Resources</h2>
      <p class="mt-3 text-stone-600 dark:text-stone-400">Everything you need to succeed with THG Commerce Insights.</p>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {resources.map(resource => (
        <a class="group flex flex-col h-full bg-white border shadow-sm rounded-xl hover:shadow-md transition dark:bg-stone-900 dark:border-stone-800" href={resource.href}>
          <div class="p-4 md:p-5">
            <div class="flex items-center gap-4">
              <div class="flex justify-center items-center w-8 h-8 bg-primary-500/10 rounded-lg text-primary-600 dark:text-primary-400">
                <Fragment set:html={resource.icon} />
              </div>
              <div class="grow">
                <h3 class="group-hover:text-primary-600 font-semibold text-stone-800 dark:group-hover:text-primary-500 dark:text-stone-200">
                  {resource.title}
                </h3>
                <p class="text-sm text-stone-600 dark:text-stone-400">
                  {resource.description}
                </p>
              </div>
              <div class="flex-shrink-0 text-stone-400 group-hover:text-primary-600 dark:group-hover:text-primary-500">
                <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</PageLayout>