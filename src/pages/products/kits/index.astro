---
import PageLayout from '../../../layouts/PageLayout.astro';
import ProductHero from '../../../components/ProductHero.astro';

const features = [
  {
    title: "Ready-to-use Templates",
    description: "Pre-built templates optimized for commerce applications",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"/></svg>`
  },
  {
    title: "Best Practices",
    description: "Built following industry standards and modern development practices",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/></svg>`
  },
  {
    title: "Optimized Performance",
    description: "Performance-optimized templates for fast loading and smooth operation",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>`
  },
  {
    title: "Modern Tech Stack",
    description: "Built with modern frameworks and tools for optimal development",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/></svg>`
  }
];

const resources = [
  {
    title: "Documentation",
    description: "Learn how to use Starter Kits",
    href: "/docs/starter-kits",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/></svg>`
  },
  {
    title: "Template Gallery",
    description: "Browse all available templates",
    href: "/docs/starter-kits/gallery",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>`
  },
  {
    title: "Quick Start",
    description: "Get started with a template",
    href: "/docs/starter-kits/quickstart",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/></svg>`
  }
];

const highlights = [
  {
    title: "Ready",
    description: "Pre-built templates"
  },
  {
    title: "Modern",
    description: "Latest tech stack"
  },
  {
    title: "Fast",
    description: "Performance optimized"
  },
  {
    title: "Best",
    description: "Industry standards"
  }
];
---

<PageLayout
  title="Starter Kits"
  description="Commerce accelerants to jumpstart your development"
>
  <ProductHero
    title="Starter Kits"
    description="Accelerate your development with our collection of pre-built commerce templates. Built with modern technologies and following best practices, these kits help you get started quickly."
    icon="/icons/altitude.svg"
    primaryAction={{
      text: "Get Started",
      href: "/docs/starter-kits"
    }}
    secondaryAction={{
      text: "View Templates",
      href: "/docs/starter-kits/gallery"
    }}
    highlights={highlights}
  />

  <!-- Features -->
  <div class="container px-4 py-10 sm:px-6 lg:px-12 lg:py-24 mx-auto">
    <div class="grid sm:grid-cols-2 lg:grid-cols-4 items-start gap-12">
      {features.map(feature => (
        <div class="text-center">
          <div class="flex justify-center items-center w-12 h-12 rounded-xl mx-auto">
            <div set:html={feature.icon} />
          </div>
          <div class="mt-3">
            <h3 class="text-base font-semibold text-stone-800 dark:text-stone-200">
              {feature.title}
            </h3>
            <p class="mt-1 text-stone-600 dark:text-stone-400">
              {feature.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
  
  <!-- Resources -->
  <div class="container px-4 py-10 sm:px-6 lg:px-12 lg:py-24 mx-auto">
    <div class="max-w-2xl mx-auto text-center mb-10">
      <h2 class="text-xl font-bold md:text-3xl dark:text-white">Resources</h2>
      <p class="mt-3 text-stone-600 dark:text-stone-400">Everything you need to get started with Starter Kits.</p>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 items-center">
      {resources.map(resource => (
        <a class="group flex flex-col h-full border shadow-sm rounded-xl hover:shadow-md transition bg-black/50 border-stone-800 justify-center" href={resource.href}>
          <div class="p-4 md:p-5">
            <div class="flex items-center gap-4">
              <div class="flex justify-center items-center w-8 h-8 rounded-lg">
                <div set:html={resource.icon} />
              </div>
              <div class="grow">
                <h3>
                  {resource.title}
                </h3>
                <p class="text-sm text-stone-600 dark:text-stone-400">
                  {resource.description}
                </p>
              </div>
              <div class="flex-shrink-0 text-stone-400">
                <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</PageLayout>