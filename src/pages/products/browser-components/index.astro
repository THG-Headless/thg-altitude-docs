---
import PageLayout from '../../../layouts/PageLayout.astro';
import ProductHero from '../../../components/ProductHero.astro';

const features = [
  {
    title: "Accessible by Default",
    description: "All components meet WCAG 2.1 AA standards for maximum accessibility",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/></svg>`
  },
  {
    title: "Maximum Performance",
    description: "Optimized for speed with minimal JavaScript and efficient rendering",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>`
  },
  {
    title: "Native Browser Features",
    description: "Leverages built-in browser capabilities for better performance and reliability",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/></svg>`
  },
  {
    title: "Framework Agnostic",
    description: "Works with any JavaScript framework or vanilla HTML/CSS/JS",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z"/></svg>`
  }
];

const resources = [
  {
    title: "Documentation",
    description: "Learn how to use Browser Components",
    href: "/docs/browser-components",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/></svg>`
  },
  {
    title: "Component Gallery",
    description: "Browse all available components",
    href: "/docs/browser-components/gallery",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>`
  },
  {
    title: "Integration Guide",
    description: "Add Browser Components to your project",
    href: "/docs/browser-components/integration",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/></svg>`
  }
];

const highlights = [
  {
    title: "Accessible",
    description: "WCAG 2.1 AA compliant"
  },
  {
    title: "Performant",
    description: "Minimal JavaScript overhead"
  },
  {
    title: "Native",
    description: "Uses browser built-in features"
  },
  {
    title: "Universal",
    description: "Works with any framework"
  }
];
---

<PageLayout
  title="Browser Components"
  description="Browser native UI components that are accessible and highly performant"
>
  <ProductHero
    title="Browser Components"
    description="Build better user interfaces with our collection of browser-native UI components. Designed for maximum accessibility and performance, these components leverage built-in browser capabilities to deliver exceptional user experiences."
    icon="/icons/altitude.svg"
    primaryAction={{
      text: "Get Started",
      href: "/docs/browser-components"
    }}
    secondaryAction={{
      text: "View Component Gallery",
      href: "/docs/browser-components/gallery"
    }}
    highlights={highlights}
  />

  <!-- Features -->
  <div class="container px-4 py-10 sm:px-6 lg:px-12 lg:py-24 mx-auto">
    <div class="grid sm:grid-cols-2 lg:grid-cols-4 items-start gap-12">
      {features.map(feature => (
        <div class="text-center">
          <div class="flex justify-center items-center w-12 h-12 bg-primary-500/10 rounded-xl mx-auto dark:text-primary-400">
            <Fragment set:html={feature.icon} />
          </div>
          <div class="mt-3">
            <h3 class="text-base font-semibold text-stone-800 dark:text-stone-200">
              {feature.title}
            </h3>
            <p class="mt-1 text-stone-600 dark:text-stone-400">
              {feature.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>

  <!-- Business Value -->
  <div class="container px-4 py-10 sm:px-6 lg:px-12 lg:py-24 mx-auto">
    <div class="max-w-2xl mx-auto text-center mb-10">
      <h2 class="text-xl font-bold md:text-3xl dark:text-white">Why Browser Components?</h2>
      <p class="mt-3 text-stone-600 dark:text-stone-400">Build better user interfaces with less code and better performance.</p>
    </div>

    <div class="grid md:grid-cols-2 gap-8 lg:gap-12">
      <div class="flex flex-col h-full bg-white border shadow-sm rounded-xl dark:bg-white/5 dark:border-white/10">
        <div class="p-4 md:p-8">
          <h3 class="text-base text-stone-800 dark:text-stone-200">Accessibility First</h3>
          <p class="mt-3 text-stone-600 dark:text-stone-400">
            All components are designed with accessibility in mind, ensuring your applications are usable by everyone, including people with disabilities.
          </p>
        </div>
      </div>

      <div class="flex flex-col h-full bg-white border shadow-sm rounded-xl dark:bg-white/5 dark:border-white/10">
        <div class="p-4 md:p-8">
          <h3 class="text-base text-stone-800 dark:text-stone-200">Performance Optimized</h3>
          <p class="mt-3 text-stone-600 dark:text-stone-400">
            By leveraging native browser features, our components deliver exceptional performance with minimal JavaScript overhead.
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Resources -->
  <div class="container px-4 py-10 sm:px-6 lg:px-12 lg:py-24 mx-auto">
    <div class="max-w-2xl mx-auto text-center mb-10">
      <h2 class="text-xl font-bold md:text-3xl dark:text-white">Resources</h2>
      <p class="mt-3 text-stone-600 dark:text-stone-400">Everything you need to get started with Browser Components.</p>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 items-center">
      {resources.map(resource => (
        <a class="group flex flex-col h-full border shadow-sm rounded-xl hover:shadow-md transition bg-black/50 border-stone-800 justify-center" href={resource.href}>
          <div class="p-4 md:p-5">
            <div class="flex items-center gap-4">
              <div class="flex justify-center items-center w-8 h-8 bg-primary-500/10 rounded-lg dark:text-primary-400">
                <Fragment set:html={resource.icon} />
              </div>
              <div class="grow">
                <h3>
                  {resource.title}
                </h3>
                <p class="text-sm text-stone-600 dark:text-stone-400">
                  {resource.description}
                </p>
              </div>
              <div class="flex-shrink-0 text-stone-400 group-hover:dark:group-hover:text-primary-500">
                <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</PageLayout>