---
import PageLayout from '../../../layouts/PageLayout.astro';
import ContentSection from '../../../components/ContentSection.astro';

const product = {
  id: "catalogue",
  name: "Catalogue",
  description: "Comprehensive product management system",
  icon: "/icons/commerce-api.svg",
  quickLinks: [
    {
      title: "Overview",
      href: "/products/catalogue"
    },
    {
      title: "Documentation",
      href: "/docs/catalogue"
    },
    {
      title: "API Reference",
      href: "/docs/catalogue/api"
    }
  ]
};

const features = [
  {
    title: "Product Information Management",
    description: "Centralize and organize all product data",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/></svg>`
  },
  {
    title: "Inventory Management",
    description: "Track stock levels across multiple locations",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/></svg>`
  },
  {
    title: "Pricing Rules",
    description: "Set complex pricing strategies and promotions",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>`
  },
  {
    title: "Product Relationships",
    description: "Create upsells, cross-sells, and bundles",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"/></svg>`
  }
];

const highlights = [
  {
    title: "Flexible Schema",
    description: "Adapt to any product type or category"
  },
  {
    title: "Rich Media Support",
    description: "Images, videos, 3D models, and more"
  },
  {
    title: "Variant Management",
    description: "Handle complex product variations"
  },
  {
    title: "Category Organization",
    description: "Intuitive product categorization"
  }
];

const businessValues = [
  {
    title: "Streamlined Operations",
    description: "Reduce time spent on product management"
  },
  {
    title: "Enhanced Customer Experience",
    description: "Provide detailed and accurate product information"
  }
];
---

<PageLayout
  title="Catalogue"
  description="Comprehensive product management system"
  {product}
>
  <div class="prose dark:prose-invert max-w-none">
    <!-- Hero -->
    <div class="not-prose bg-gradient-to-b from-stone-900 to-stone-800 -mx-4 sm:-mx-6 lg:-mx-8 p-8 sm:p-12 lg:p-16 rounded-xl mb-12">
      <div class="max-w-3xl mx-auto text-center mb-12">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-6">THG Commerce Catalogue</h1>
        <p class="text-xl text-stone-300">Manage your entire product catalog with our flexible and powerful system. From basic product information to complex variants and relationships, our catalog solution handles it all.</p>
      </div>
      <div class="flex justify-center gap-4 mt-8">
        <a href="/docs/catalogue" class="inline-flex items-center gap-2 px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white rounded-lg transition-colors">
          Get Started
          <svg class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
        <a href="/docs/catalogue/api" class="inline-flex items-center gap-2 px-6 py-3 border border-stone-600 hover:border-stone-500 text-stone-300 hover:text-white rounded-lg transition-colors">
          View API Reference
          <svg class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </div>

    <!-- Highlights -->
    <div class="not-prose grid sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
      {highlights.map(highlight => (
        <div class="bg-stone-900/50 rounded-xl p-6">
          <h3 class="text-lg font-semibold text-stone-200 mb-2">{highlight.title}</h3>
          <p class="text-stone-400">{highlight.description}</p>
        </div>
      ))}
    </div>

    <!-- Key Features -->
    <div class="grid sm:grid-cols-2 gap-8 mb-12">
      {features.map(feature => (
        <div class="not-prose bg-stone-900/50 rounded-xl p-6">
          <div class="text-primary-400 mb-4" set:html={feature.icon} />
          <h3 class="text-xl font-semibold text-stone-200 mb-2">{feature.title}</h3>
          <p class="text-stone-400">{feature.description}</p>
        </div>
      ))}
    </div>

    <!-- Product Data Management -->
    <ContentSection title="Product Data Management" description="Comprehensive tools for managing all aspects of your product data:">
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="bg-stone-800/50 rounded-xl p-6">
          <h3 class="text-lg font-semibold text-stone-200 mb-2">Attribute Management</h3>
          <p class="text-stone-400">Create and manage custom product attributes and properties</p>
        </div>
        <div class="bg-stone-800/50 rounded-xl p-6">
          <h3 class="text-lg font-semibold text-stone-200 mb-2">Media Library</h3>
          <p class="text-stone-400">Centralized storage for product images, videos, and documents</p>
        </div>
        <div class="bg-stone-800/50 rounded-xl p-6">
          <h3 class="text-lg font-semibold text-stone-200 mb-2">Variant Management</h3>
          <p class="text-stone-400">Handle products with multiple options like size, color, and material</p>
        </div>
        <div class="bg-stone-800/50 rounded-xl p-6">
          <h3 class="text-lg font-semibold text-stone-200 mb-2">Bulk Operations</h3>
          <p class="text-stone-400">Update multiple products simultaneously with batch editing</p>
        </div>
        <div class="bg-stone-800/50 rounded-xl p-6">
          <h3 class="text-lg font-semibold text-stone-200 mb-2">Import/Export</h3>
          <p class="text-stone-400">Easily move product data in and out of the system</p>
        </div>
        <div class="bg-stone-800/50 rounded-xl p-6">
          <h3 class="text-lg font-semibold text-stone-200 mb-2">Validation Rules</h3>
          <p class="text-stone-400">Ensure data quality with customizable validation</p>
        </div>
      </div>
    </ContentSection>

    <!-- Business Value -->
    <ContentSection title="Business Value" description="Optimize your product management and enhance customer experience:">
      <div class="grid sm:grid-cols-2 gap-6">
        {businessValues.map(value => (
          <div class="bg-stone-800/50 rounded-xl p-6">
            <h3 class="text-lg font-semibold text-stone-200 mb-2">{value.title}</h3>
            <p class="text-stone-400">{value.description}</p>
          </div>
        ))}
      </div>
    </ContentSection>

    <!-- Resources -->
    <ContentSection title="Resources">
      <div class="grid sm:grid-cols-3 gap-6">
        <a href="/docs/catalogue" class="block bg-stone-800/50 rounded-xl p-6 hover:bg-stone-800/70 transition-colors">
          <h3 class="text-lg font-semibold text-stone-200 mb-2">Documentation</h3>
          <p class="text-stone-400">Learn how to manage your product catalog</p>
        </a>
        <a href="/docs/catalogue/quickstart" class="block bg-stone-800/50 rounded-xl p-6 hover:bg-stone-800/70 transition-colors">
          <h3 class="text-lg font-semibold text-stone-200 mb-2">Quick Start</h3>
          <p class="text-stone-400">Set up your first products in minutes</p>
        </a>
        <a href="/docs/catalogue/api" class="block bg-stone-800/50 rounded-xl p-6 hover:bg-stone-800/70 transition-colors">
          <h3 class="text-lg font-semibold text-stone-200 mb-2">API Reference</h3>
          <p class="text-stone-400">Explore the Catalogue API</p>
        </a>
      </div>
    </ContentSection>

    <!-- Getting Started -->
    <div class="not-prose bg-stone-900/50 rounded-xl p-8 text-center mt-12">
      <h2 class="text-2xl font-bold text-stone-200 mb-4">Ready to streamline your product management?</h2>
      <p class="text-stone-400 mb-6">Get started with THG Commerce Catalogue today.</p>
      <div class="flex justify-center gap-4">
        <a href="/docs/catalogue" class="inline-flex items-center gap-2 px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white rounded-lg transition-colors">
          Get Started
          <svg class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</PageLayout>