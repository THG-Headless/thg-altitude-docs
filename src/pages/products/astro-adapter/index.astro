---
import PageLayout from '../../../layouts/PageLayout.astro';
import ProductHero from '../../../components/ProductHero.astro';

const features = [
  {
    title: "Easy Deployment",
    description: "Simple deployment process to Altitude's edge network",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/></svg>`
  },
  {
    title: "Zero Configuration",
    description: "Works out of the box with minimal setup required",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/></svg>`
  },
  {
    title: "Performance Optimized",
    description: "Optimized for maximum performance on the edge",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>`
  },
  {
    title: "Edge-ready",
    description: "Built specifically for edge computing environments",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>`
  }
];

const resources = [
  {
    title: "Documentation",
    description: "Learn how to use Astro Adapter",
    href: "/docs/astro-adapter",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/></svg>`
  },
  {
    title: "Quick Start",
    description: "Deploy your first site",
    href: "/docs/astro-adapter/quickstart",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>`
  },
  {
    title: "Configuration",
    description: "Advanced configuration options",
    href: "/docs/astro-adapter/config",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"/></svg>`
  }
];

const highlights = [
  {
    title: "Simple",
    description: "Easy deployment"
  },
  {
    title: "Zero Config",
    description: "Works out of box"
  },
  {
    title: "Fast",
    description: "Performance optimized"
  },
  {
    title: "Edge",
    description: "Built for edge"
  }
];
---

<PageLayout
  title="Astro Adapter"
  description="Astro to Altitude worker adapter for seamless deployment"
>
  <ProductHero
    title="Astro Adapter"
    description="Deploy your Astro sites to Altitude's edge network with our specialized adapter. Built for optimal performance and easy deployment, get your sites running on the edge in minutes."
    icon="/icons/altitude.svg"
    primaryAction={{
      text: "Get Started",
      href: "/docs/astro-adapter"
    }}
    secondaryAction={{
      text: "View Documentation",
      href: "/docs/astro-adapter/quickstart"
    }}
    highlights={highlights}
  />

  <!-- Features -->
  <div class="container px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
    <div class="grid sm:grid-cols-2 lg:grid-cols-4 items-center gap-12">
      {features.map(feature => (
        <div class="text-center">
          <div class="flex justify-center items-center w-12 h-12 bg-primary-500/10 rounded-xl mx-auto text-primary-600 dark:text-primary-400">
            <div set:html={feature.icon} />
          </div>
          <div class="mt-3">
            <h3 class="text-lg font-semibold text-stone-800 dark:text-stone-200">
              {feature.title}
            </h3>
            <p class="mt-1 text-stone-600 dark:text-stone-400">
              {feature.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>

  <!-- Business Value -->
  <div class="container px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
    <div class="max-w-2xl mx-auto text-center mb-10">
      <h2 class="text-2xl font-bold md:text-3xl dark:text-white">Why Astro Adapter?</h2>
      <p class="mt-3 text-stone-600 dark:text-stone-400">Deploy your Astro sites to the edge with minimal configuration.</p>
    </div>

    <div class="grid md:grid-cols-2 gap-8 lg:gap-12">
      <div class="flex flex-col h-full bg-white border shadow-sm rounded-xl dark:bg-stone-900 dark:border-stone-800">
        <div class="p-4 md:p-6">
          <h3 class="text-xl font-semibold text-stone-800 dark:text-stone-200">Edge Optimized</h3>
          <p class="mt-3 text-stone-600 dark:text-stone-400">
            Our adapter is specifically built for edge computing, ensuring optimal performance and reliability for your Astro sites.
          </p>
        </div>
      </div>

      <div class="flex flex-col h-full bg-white border shadow-sm rounded-xl dark:bg-stone-900 dark:border-stone-800">
        <div class="p-4 md:p-6">
          <h3 class="text-xl font-semibold text-stone-800 dark:text-stone-200">Simple Deployment</h3>
          <p class="mt-3 text-stone-600 dark:text-stone-400">
            Deploy your Astro sites to Altitude's edge network with minimal configuration and maximum reliability.
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Resources -->
  <div class="container px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
    <div class="max-w-2xl mx-auto text-center mb-10">
      <h2 class="text-2xl font-bold md:text-3xl dark:text-white">Resources</h2>
      <p class="mt-3 text-stone-600 dark:text-stone-400">Everything you need to get started with Astro Adapter.</p>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {resources.map(resource => (
        <a class="group flex flex-col h-full bg-white border shadow-sm rounded-xl hover:shadow-md transition dark:bg-stone-900 dark:border-stone-800" href={resource.href}>
          <div class="p-4 md:p-5">
            <div class="flex items-center gap-4">
              <div class="flex justify-center items-center w-8 h-8 bg-primary-500/10 rounded-lg text-primary-600 dark:text-primary-400">
                <div set:html={resource.icon} />
              </div>
              <div class="grow">
                <h3 class="group-hover:text-primary-600 font-semibold text-stone-800 dark:group-hover:text-primary-500 dark:text-stone-200">
                  {resource.title}
                </h3>
                <p class="text-sm text-stone-600 dark:text-stone-400">
                  {resource.description}
                </p>
              </div>
              <div class="flex-shrink-0 text-stone-400 group-hover:text-primary-600 dark:group-hover:text-primary-500">
                <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</PageLayout>