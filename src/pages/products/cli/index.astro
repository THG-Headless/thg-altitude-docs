---
import PageLayout from '../../../layouts/PageLayout.astro';
import ProductHero from '../../../components/ProductHero.astro';

const features = [
  {
    title: "Environment Management",
    description: "Comprehensive tools for managing your environments",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/></svg>`
  },
  {
    title: "Component Commands",
    description: "Coming in Q2: Easy component management commands",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>`
  },
  {
    title: "Deployment Tools",
    description: "Streamlined deployment process to Altitude",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/></svg>`
  },
  {
    title: "Configuration Management",
    description: "Easy management of project configurations",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"/></svg>`
  }
];

const resources = [
  {
    title: "Documentation",
    description: "Learn how to use Altitude CLI",
    href: "/docs/cli",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/></svg>`
  },
  {
    title: "Command Reference",
    description: "Explore available commands",
    href: "/docs/cli/commands",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>`
  },
  {
    title: "Quick Start",
    description: "Get started with the CLI",
    href: "/docs/cli/quickstart",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>`
  }
];

const highlights = [
  {
    title: "Manage",
    description: "Environment tools"
  },
  {
    title: "Deploy",
    description: "Deployment tools"
  },
  {
    title: "Configure",
    description: "Easy configuration"
  },
  {
    title: "Components",
    description: "Coming in Q2"
  }
];
---

<PageLayout
  title="Altitude CLI"
  description="Environment management tools with component commands"
>
  <ProductHero
    title="Altitude CLI"
    description="Manage your Altitude environments and deployments with our powerful command-line interface. With comprehensive tools for environment management and deployment, plus component commands coming in Q2."
    icon="/icons/altitude.svg"
    primaryAction={{
      text: "Documentation",
      href: "/docs/cli"
    }}
    highlights={highlights}
  />

  <!-- Features -->
  <div class="container px-4 py-10 sm:px-6 lg:px-12 lg:py-24 mx-auto">
    <div class="grid sm:grid-cols-2 lg:grid-cols-4 items-start gap-12">
      {features.map(feature => (
        <div class="text-center">
          <div class="flex justify-center items-center w-12 h-12 rounded-xl mx-auto">
            <div set:html={feature.icon} />
          </div>
          <div class="mt-3">
            <h3 class="text-base font-semibold text-stone-800 dark:text-stone-200">
              {feature.title}
            </h3>
            <p class="mt-1 text-stone-600 dark:text-stone-400">
              {feature.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>

  <!-- Business Value -->
  <div class="container px-4 py-10 sm:px-6 lg:px-12 lg:py-24 mx-auto">
    <div class="max-w-2xl mx-auto text-center mb-10">
      <h2 class="text-xl font-bold md:text-3xl dark:text-white">Why Altitude CLI?</h2>
      <p class="mt-3 text-stone-600 dark:text-stone-400">Powerful command-line tools for managing your Altitude projects.</p>
    </div>

    <div class="grid md:grid-cols-2 gap-8 lg:gap-12">
      <div class="flex flex-col h-full bg-white border shadow-sm rounded-xl dark:bg-white/5 dark:border-white/10">
        <div class="p-4 md:p-8">
          <h3 class="text-base text-stone-800 dark:text-stone-200">Comprehensive Tools</h3>
          <p class="mt-3 text-stone-600 dark:text-stone-400">
            From environment management to deployment, our CLI provides all the tools you need to manage your Altitude projects effectively.
          </p>
        </div>
      </div>

      <div class="flex flex-col h-full bg-white border shadow-sm rounded-xl dark:bg-white/5 dark:border-white/10">
        <div class="p-4 md:p-8">
          <h3 class="text-base text-stone-800 dark:text-stone-200">Developer Experience</h3>
          <p class="mt-3 text-stone-600 dark:text-stone-400">
            Built with developers in mind, our CLI provides an intuitive interface and powerful features to streamline your workflow.
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Resources -->
  <div class="container px-4 py-10 sm:px-6 lg:px-12 lg:py-24 mx-auto">
    <div class="max-w-2xl mx-auto text-center mb-10">
      <h2 class="text-xl font-bold md:text-3xl dark:text-white">Resources</h2>
      <p class="mt-3 text-stone-600 dark:text-stone-400">Everything you need to get started with Altitude CLI.</p>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 items-center">
      {resources.map(resource => (
        <a class="group flex flex-col h-full border shadow-sm rounded-xl hover:shadow-md transition bg-black/50 border-stone-800 justify-center" href={resource.href}>
          <div class="p-4 md:p-5">
            <div class="flex items-center gap-4">
              <div class="flex justify-center items-center w-8 h-8 rounded-lg">
                <div set:html={resource.icon} />
              </div>
              <div class="grow">
                <h3>
                  {resource.title}
                </h3>
                <p class="text-sm text-stone-600 dark:text-stone-400">
                  {resource.description}
                </p>
              </div>
              <div class="flex-shrink-0 text-stone-400">
                <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</PageLayout>