---
import PageLayout from '../../../layouts/PageLayout.astro';
import ProductHero from '../../../components/ProductHero.astro';

const features = [
  {
    title: "Easy Installation",
    description: "Simple npm installation process with minimal configuration required",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/></svg>`
  },
  {
    title: "Commerce-focused",
    description: "Specialized components designed specifically for e-commerce applications",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/></svg>`
  },
  {
    title: "Plug and Play",
    description: "Ready-to-use components that work out of the box with minimal setup",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/></svg>`
  },
  {
    title: "Customizable",
    description: "Flexible styling and configuration options to match your brand",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/></svg>`
  }
];

const resources = [
  {
    title: "Documentation",
    description: "Learn how to use Elements",
    href: "/docs/elements",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/></svg>`
  },
  {
    title: "Component Gallery",
    description: "Browse all available elements",
    href: "/docs/elements/gallery",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>`
  },
  {
    title: "Integration Guide",
    description: "Add Elements to your project",
    href: "/docs/elements/integration",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/></svg>`
  }
];

const highlights = [
  {
    title: "Simple",
    description: "Easy installation"
  },
  {
    title: "Commerce",
    description: "Built for e-commerce"
  },
  {
    title: "Ready",
    description: "Works out of the box"
  },
  {
    title: "Flexible",
    description: "Highly customizable"
  }
];
---

<PageLayout
  title="Elements"
  description="Installable commerce features to enhance your online store"
>
  <ProductHero
    title="Elements"
    description="Enhance your online store with our collection of installable commerce features. Built for modern e-commerce, these elements provide essential functionality with minimal setup required."
    icon="/icons/altitude.svg"
    primaryAction={{
      text: "Get Started",
      href: "/docs/elements"
    }}
    secondaryAction={{
      text: "View Element Gallery",
      href: "/docs/elements/gallery"
    }}
    highlights={highlights}
  />

  <section class="container px-4 py-10 sm:px-6 lg:px-12 lg:py-24 mx-auto">    
    <div class="mx-auto flex flex-col items-center gap-6">
      <h2 class="mb-4 text-center text-3xl font-semibold lg:text-5xl">
        Ready-made Commerce Elements
      </h2>
      <p class="text-balance text-center text-stone-300">
        Accelerate your online store with our collection of installable commerce features. Built for modern e-commerce, these elements provide essential functionality with minimal setup required.
      </p>
    </div>
    <div class="mt-24 space-y-12">
      <div class="mx-auto flex w-full flex-col items-center gap-8 md:gap-16">
        <div data-state="active" data-orientation="horizontal"
          class="mt-2 w-full ring-offset-background focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2">
          <div class="grid grid-cols-1 justify-center items-center gap-16 md:grid-cols-2">
            <div>
              <h2 class="mb-4 text-2xl font-semibold md:text-4xl">Facets</h2>
              <p class="text-stone-400">
                Installable facets that provide filtering and sorting capabilities.
              </p>
              <ul class="mt-8 grid grid-cols-1 gap-2 lg:grid-cols-2">
                <li class="flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                    class="lucide lucide-circle-check w-4">
                    <circle cx="12" cy="12" r="10"></circle>
                    <path d="m9 12 2 2 4-4"></path>
                  </svg><span class="font-medium">Responsive</span>
                </li>
                <li class="flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                    class="lucide lucide-circle-check w-4">
                    <circle cx="12" cy="12" r="10"></circle>
                    <path d="m9 12 2 2 4-4"></path>
                  </svg><span class="font-medium">Customisable UI</span>
                </li>
                <li class="flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                    class="lucide lucide-circle-check w-4">
                    <circle cx="12" cy="12" r="10"></circle>
                    <path d="m9 12 2 2 4-4"></path>
                  </svg><span class="font-medium">Performant</span>
                </li>
              </ul>
              <a href="/docs/elements/facets" class="mt-8 flex items-center gap-2 font-medium hover:underline">Learn more<svg
                  xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                  stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                  class="lucide lucide-arrow-right w-4">
                  <path d="M5 12h14"></path>
                  <path d="m12 5 7 7-7 7"></path>
                </svg></a>
            </div>
            <img src="/statics/screenshots/elements/facets.png" alt="Ready to use blocks"
              class="order-first max-h-[400px] w-full rounded-lg object-cover md:order-last" />
          </div>
        </div>
      </div>
      <div class="mx-auto flex w-full flex-col items-center gap-8 md:gap-16">
        <div class="mt-2 w-full ring-offset-background focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2">
          <div class="grid grid-cols-1 justify-center items-center gap-16 md:grid-cols-2">
            <div>
              <h2 class="mb-4 text-2xl font-semibold md:text-4xl">Variations</h2>
              <p class="text-stone-400">
                Complex variations made simple.
              </p>
              <ul class="mt-8 grid grid-cols-1 gap-2 lg:grid-cols-2">
                <li class="flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                    class="lucide lucide-circle-check w-4">
                    <circle cx="12" cy="12" r="10"></circle>
                    <path d="m9 12 2 2 4-4"></path>
                  </svg><span class="font-medium">Vanilla Javascript</span>
                </li>
                <li class="flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                    class="lucide lucide-circle-check w-4">
                    <circle cx="12" cy="12" r="10"></circle>
                    <path d="m9 12 2 2 4-4"></path>
                  </svg><span class="font-medium">Event Based</span>
                </li>
                <li class="flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                    class="lucide lucide-circle-check w-4">
                    <circle cx="12" cy="12" r="10"></circle>
                    <path d="m9 12 2 2 4-4"></path>
                  </svg><span class="font-medium">Vue, Astro famework support</span>
                </li>
              </ul>
              <a href="/docs/elements/variations" class="mt-8 flex items-center gap-2 font-medium hover:underline">Learn more<svg
                  xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                  stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                  class="lucide lucide-arrow-right w-4">
                  <path d="M5 12h14"></path>
                  <path d="m12 5 7 7-7 7"></path>
                </svg></a>
            </div>
            <img src="/statics/screenshots/elements/variations.png" alt="Ready to use blocks"
              class="order-first max-h-[400px] w-full rounded-lg object-cover md:order-first" />
          </div>
        </div>
      </div>
    </div>

  </section>

  <!-- Features -->
  <div class="container px-4 py-10 sm:px-6 lg:px-12 lg:py-24 mx-auto">
    <div class="grid sm:grid-cols-2 lg:grid-cols-4 items-start gap-12">
      {features.map(feature => (
        <div class="text-center">
          <div class="flex justify-center items-center w-12 h-12 rounded-xl mx-auto">
            <div set:html={feature.icon} />
          </div>
          <div class="mt-3">
            <h3 class="text-base font-semibold text-stone-800 dark:text-stone-200">
              {feature.title}
            </h3>
            <p class="mt-1 text-stone-600 dark:text-stone-400">
              {feature.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>

  <!-- Resources -->
  <div class="container px-4 py-10 sm:px-6 lg:px-12 lg:py-24 mx-auto">
    <div class="max-w-2xl mx-auto text-center mb-10">
      <h2 class="text-xl font-bold md:text-3xl dark:text-white">Resources</h2>
      <p class="mt-3 text-stone-600 dark:text-stone-400">Everything you need to get started with Elements.</p>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 items-center">
      {resources.map(resource => (
        <a class="group flex flex-col h-full border shadow-sm rounded-xl hover:shadow-md transition bg-black/50 border-stone-800 justify-center" href={resource.href}>
          <div class="p-4 md:p-5">
            <div class="flex items-center gap-4">
              <div class="flex justify-center items-center w-8 h-8 rounded-lg">
                <div set:html={resource.icon} />
              </div>
              <div class="grow">
                <h3>
                  {resource.title}
                </h3>
                <p class="text-sm text-stone-600 dark:text-stone-400">
                  {resource.description}
                </p>
              </div>
              <div class="flex-shrink-0 text-stone-400">
                <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</PageLayout>