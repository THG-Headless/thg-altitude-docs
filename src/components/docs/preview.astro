---
/**
 * Preview component for displaying content in a styled container
 *
 * This component is used in the elements package with the Tabs component
 * to show a preview of the component separate from its code.
 * Styled to match the ComponentPreview component.
 */

const { height = 400 } = Astro.props;
---
 
<div class="component-preview not-prose mb-8 rounded-lg overflow-hidden shadow-lg">
  <!-- Preview Panel - Styled to match ComponentPreview -->

    <div class="flex justify-center items-center" style={height ? `min-height: ${height}px` : ""}>
      <slot />
    </div>
</div>

<style is:global>
  /* Dark mode adjustments */
  @media (prefers-color-scheme: dark) {
    .component-preview {
      border-color: rgba(75, 85, 99, 0.5);
    }
  }
</style>