---
export const prerender = true;
import { parseTypographyScheme } from "@utils/browser-components/v0.2.0/typographyParser";

// Hardcoded CSS content
const cssContent = `@theme {
  /* Font Weights */
  --font-thin: 100;
  --font-extra-light: 200;
  --font-light: 300;
  --font-normal: 400;
  --font-medium: 500;
  --font-semi-bold: 600;
  --font-bold: 700;
  --font-extra-bold: 800;
  --font-black: 900;
}`;

const typography = parseTypographyScheme(cssContent);
---

<section class="mb-12">
  <div class="space-y-4">
    {
      typography.weights.variables.map((weight) => (
        <div class="grid grid-cols-6 items-center pb-2">
          <div class="col-span-3 font-mono text-sm ">{weight.name}</div>
          <div
            class="col-span-2 text-lg pl-8"
            style={`font-weight: ${weight.value};`}
          >
            Altitude
          </div>
          <div class="col-span-1 text-right font-mono text-sm ">
            {weight.value}
          </div>
        </div>
      ))
    }
  </div>
</section>
