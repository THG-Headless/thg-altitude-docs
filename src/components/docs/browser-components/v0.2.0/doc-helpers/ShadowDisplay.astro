---
import "@content/docs/browser-components/v0.2.0/sample-css/shadows.css";
import { parseShadowScheme } from "@utils/browser-components/v0.2.0/shadowParser";

// Hardcoded CSS content
const cssContent = `@theme {
  --shadow-site: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
    0 2px 4px -1px rgba(0, 0, 0, 0.06), 0 2px 8px 0 rgba(0, 0, 0, 0.1);
}`;

const shadow = parseShadowScheme(cssContent);
---

<div class="pt-2 flex justify-center w-full">
  <div class="flex gap-4 items-center">
    <div
      class="w-42 h-42 p-4 rounded-xl aspect-square flex justify-center items-center bg-white relative"
    >
      <div
        class="w-32 h-32 p-4 bg-stone-300 rounded-lg"
        style={{
          boxShadow: shadow?.value,
        }}
      >
      </div>
    </div>

    <div class="text-center">
      <div>
        <strong>
          {shadow?.name}
        </strong>
      </div>
    </div>
  </div>
</div>
