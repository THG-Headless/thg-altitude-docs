---
import { getProducts } from "@config/products";
interface Props {
  title?: string;
}

const { title } = Astro.props;
const products = getProducts();
---

<header class="sticky top-0 z-40 w-full backdrop-blur flex-none transition-colors duration-500 lg:z-50 lg:border-b lg:border-stone-900/10 dark:border-stone-50/[0.06] supports-backdrop-blur:bg-stone-950/60">
  <div class="container px-4 lg:px-0 mx-auto">
    <div class="py-4 px-4 lg:px-0">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-12">
          <a href="/" class="flex items-center space-x-3">
            <img src="/statics/icons/altitude-alt.svg" alt="THG Commerce" class="h-10 w-10" />
            <span class="text-sm font-sans font-semibold uppercase line text-base/4 tracking-widest antialiased">THG<br />Altitude</span>
          </a>
          <nav class="hidden md:flex space-x-8">
            <div class="relative group">
              <button class="flex items-center font-sm space-x-1 text-stone-300 hover:text-stone-100 py-2">
                <span>Products</span>
                <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </button>
              <div class="absolute top-full -mt-1 w-48 rounded-md shadow-lg bg-stone-900 ring-1 ring-black ring-opacity-5 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-150">
                <div class="py-1">
                  {getProducts().map((item) => (
                    <a href={item.href} class="block px-4 py-2 text-sm text-stone-300 hover:bg-stone-800">{item.name}</a>
                  ))}
                </div>
              </div>
            </div>
            <a href="/docs" class="text-stone-300 hover:text-stone-100 py-2">Documentation</a>
            <a href="/blog" class="text-stone-300 hover:text-stone-100 py-2">Blog</a>
          </nav>
        </div>
        <div class="flex items-center space-x-4">
          <a href="/blog" class="md:hidden text-stone-300 hover:text-stone-100">
            <span class="sr-only">Blog</span>
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
            </svg>
          </a>
          <a href="https://github.com/THG-Altitude" class="text-stone-300 hover:text-stone-100">
            <span class="sr-only">GitHub</span>
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
            </svg>
          </a>
          <a href="https://www.platform.thgaltitude.com/" target="_blank" class="inline-block rounded-md border border-stone-700 px-6 py-2 text-center text-white transition duration-300 hover:bg-white/5 hover:border-white/40">
            Go to Platform
          </a>
        </div>
      </div>
    </div>
  </div>
</header>

<style>
  .group:hover .group-hover\:visible {
    visibility: visible;
  }
  .group:hover .group-hover\:opacity-100 {
    opacity: 1;
  }
</style>